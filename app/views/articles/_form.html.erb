<%= render 'shared/errors', obj: @article %>

<div class="row">s
  <div class="col-xs-12">
<%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">        
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, class: 'form-control', placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>
         <div class="col-sm-8">
          <%= form.text_area :description, rows: 10, class: 'form-control', placeholder: "Body of Article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: "btn btn-danger btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">  
      [ <%= link_to 'Cancel request and return to Articles Listing', articles_path %> ]
    </div>
  </div>
</div>